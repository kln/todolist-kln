<div class="row sign-up">
  <h2>Crie sua conta</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :email, label: false, placeholder: "Digite seu email", autofocus: true %>
    </div>

    <div class="row">
      <%= f.input :password, label: false, placeholder: "Escolha uma senha" %>
    </div>

    <div class="row">
      <%= f.input :password_confirmation, label: false, placeholder: "Confirme sua senha" %>
    </div>

    <div class="row">
      <%= link_to 'Voltar', root_path, :class => 'btn btn-back' %>

      <%= f.button :submit, "Criar conta", :class => 'btn', :id => 'create-account' %>
    </div>
  <% end %>
</div>